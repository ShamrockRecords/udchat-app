<!doctype html>
<html lang="ja">
  	<head>
		<title><%- __("UD Chat") %> - <%- __("プロフィール") %></title>
		<%- include('parts/head', {}) %>
  	</head>
  	<body>
		<%- include('parts/nav_bar', {}) %>

		<div class="container p-3 my-3">
			<div class="row">
				<div class="col">
					<h2><%- __("プロフィール") %></h2>
				</div>
			</div>
			<div class="row">
				<div class="col">
					<label><%- __("メールアドレス") %></label>
					<p><%= email %></p>
				</div>
			</div>
			<div class="row">
				<div class="col">
					<form method="POST" action="/profile/update">
						<div class="form-group">
							<button type="submit" class="btn btn-primary"><%- __("更新") %></button>
							<button class="btn btn-danger" onclick="javascript:window.history.back(-1);return false;"><%- __("キャンセル") %></button>
						</div>
						<div class="form-group">
							<label for="name"><%- __("名前") %><span class="badge badge-danger"><%- __("必須") %></span></label>
							<input required type="text" class="form-control" id="name" name="name" value="<%= data.name %>" aria-describedby="nameHelp">
							<small id="nameHelp" class="form-text text-muted"><%- __("チャットに表示される名前を入力してください。") %></small>
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-primary"><%- __("更新") %></button>
							<button class="btn btn-danger" onclick="javascript:window.history.back(-1);return false;"><%- __("キャンセル") %></button>
						</div>
					</form>
				</div>
			</div>
		</div>

		<%- include('parts/footer', {}) %>
	</body>
</html>